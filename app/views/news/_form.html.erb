    <%= form.label :subtitle %>
    <%= form.text_field :subtitle, :class => "form-control" %>
  </div>

  <div class="form-group">
    <%= form.label :body %>
    <%= form.text_area :body, :class => "form-control" %>
  </div>

<div class="form-group">
  <%= form.label :image %>
  <%= form.file_field :image, :class => "form-control" %>
</div>

  <div class="form-group">
    <%= form.label :published %>
    <%= form.date_select :published, :class => "form-control" %>
  </div>

  <div class="form-group">
    <%= form.label :updated %>
    <%= form.date_select :updated, :class => "form-control" %>
